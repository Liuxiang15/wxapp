.container {
  /* width:100%; */
  width: calc(100% + 120rpx);
  height: 150rpx;
  outline:1px solid #ddd;
  margin-bottom: 10rpx;
  /* 往左移 */
  position: relative;
  left: -120rpx;
}
.movable-view {
  /* width:100%; */
  width: calc(100% - 120rpx);
  height:100%;
  display:flex;
  justify-content: center;
  align-items:center;
  padding:20rpx 10rpx;
  box-sizing: border-box;
  /* 设置背景颜色可以将float:right的删除按钮盖住？？？
  原因是堆叠上下文的层次中
  4. 非定位的浮动盒子
  5. 非定位的常规流行盒
 */
  background-color: white;
  /* 消息内容往右边移动 */
  position: absolute;
  left: 120rpx;
}

.movable-view image {
  width: 100rpx;
  height:100rpx;
}


.content {
  width: 70%;
  height:100%;
}

.content .top {
  width: 100%;
  height: 50%;
  color: #2c2b2b;
  font-size: 30rpx;
  margin-top: 10rpx;
}
.content .bottom {
  width: 100%;
  height: 50%;
  font-size: 26rpx;
  color: #888;
}

.timeBox {
  width: 10%;
  height:100%;
}

.timeBox .top{
  font-size: 24rpx;
}

.timeBox .bottom{
  text-align: center;
}

.delete{
  width: 120rpx;
  height: 100%;
  background-color: red;
  color: white;
  text-align: center;
  line-height: 150rpx;
  /* 删除在最右面 */
  float: right;
}